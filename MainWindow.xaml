<Window x:Class="JobSearch.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="Job Search"
		Height="768"
		Width="1023"
		Icon="pack://application:,,,/hiking_24dp_1F1F1F_FILL0_wght400_GRAD0_opsz24.ico">
	<TabControl x:Name="tabControl">
		<TabItem Header="Roles">
			<Grid Margin="10">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="40"/>
					<RowDefinition Height="40"/>
					<RowDefinition Height="40"/>
					<RowDefinition Height="40"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>

				<Label Content="Company:" Grid.Row="0" Grid.Column="0" Margin="8,2,8,2" VerticalAlignment="Center" HorizontalAlignment="Right"/>
				<ComboBox x:Name="cmbCompany" Grid.Row="0" Grid.Column="1" Width="180" DisplayMemberPath="Name" SelectedValuePath="CompanyID" Margin="8,2,8,2" VerticalAlignment="Center" HorizontalAlignment="Left"/>

				<Label Content="Role:" Grid.Row="0" Grid.Column="2" Margin="8,2,8,2" VerticalAlignment="Center" HorizontalAlignment="Right"/>
				<TextBox x:Name="txtRoleName" Grid.Row="0" Grid.Column="3" Margin="8,2,8,2" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>

				<Label Content="Status:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right"/>
				<ComboBox x:Name="cmbStatus" Grid.Row="1" Grid.Column="1" Width="180" DisplayMemberPath="Name" SelectedValuePath="StatusID" Margin="8,2,8,2" VerticalAlignment="Center" HorizontalAlignment="Left"/>

				<Label Content="Notes:" Grid.Row="1" Grid.Column="2" Margin="8,2,8,2" VerticalAlignment="Top" HorizontalAlignment="Right"/>
				<TextBox x:Name="txtNotes" Grid.Row="1" Grid.RowSpan="2" Grid.Column="3" AcceptsReturn="True" Margin="8,2,8,2" HorizontalAlignment="Stretch"/>

				<StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" Orientation="Horizontal" Margin="8,2,8,2">
					<Button x:Name="btnAddRole" Content="Add Role" Width="100" Margin="8" Click="OnAddRoleClick"/>
					<Button x:Name="btnUpdateRole" Content="Update Role" Width="100" Margin="8" Click="OnUpdateRoleClick"/>
				</StackPanel>

				<DataGrid x:Name="dgRoles"
						  Grid.Row="4"
						  Grid.Column="0"
						  Grid.ColumnSpan="4"
						  AutoGenerateColumns="False"
						  SelectionMode="Single"
						  CanUserAddRows="False"
						  SelectionChanged="OnRolesSelectionChanged">
					<DataGrid.Columns>
						<!--
						<DataGridTextColumn Header="ID" Binding="{Binding RoleID}" Width="50" IsReadOnly="True" Visibility="Collapsed"/>
						-->
						<DataGridTextColumn Header="Role Name" Binding="{Binding RoleName}" Width="150" IsReadOnly="True"/>
						<DataGridTextColumn Header="Company" Binding="{Binding Company}" Width="150" IsReadOnly="True"/>
						<DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120" IsReadOnly="True"/>
						<DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="200" IsReadOnly="True"/>
						<!--
						<DataGridTextColumn Header="CreatedUTC" Binding="{Binding CreatedUTC}" Width="120" IsReadOnly="True"/>
						<DataGridTextColumn Header="ModifiedUTC" Binding="{Binding ModifiedUTC}" Width="120" IsReadOnly="True"/>
						-->
						<DataGridTextColumn Header="Created" Binding="{Binding Created}" Width="120" IsReadOnly="True" SortMemberPath="CreatedUTC"/>
						<DataGridTextColumn Header="Modified" Binding="{Binding Modified}" Width="120" IsReadOnly="True" SortMemberPath="ModifiedUTC"/>
					</DataGrid.Columns>
				</DataGrid>
			</Grid>
		</TabItem>
		<TabItem Header="Companies">
			<Grid Margin="10">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="40"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				
				<TextBlock Grid.Row="0" Grid.Column="0" Margin="8,2,8,2" VerticalAlignment="Center" HorizontalAlignment="Right" Text="Name" />
				<TextBox Grid.Row="0" Grid.Column="1" x:Name="txtCompanyName" Margin="8,2,8,2" VerticalAlignment="Center" HorizontalAlignment="Stretch" />
				<Button Grid.Row="0" Grid.Column="2" x:Name="btnAddCompany" Content="Add" Click="OnAddCompanyClick" Width="100" Margin="8"/>

				<DataGrid
					x:Name="dgCompanies"
					Grid.Row="2"
					Grid.Column="0"
					Grid.ColumnSpan="3"
					AutoGenerateColumns="False"
					SelectionMode="Single"
					CanUserAddRows="False">
					<DataGrid.Columns>
						<DataGridTextColumn Header="Company" Binding="{Binding Name}" IsReadOnly="True" />
					</DataGrid.Columns>
				</DataGrid>
			</Grid>
		</TabItem>
	</TabControl>
</Window>